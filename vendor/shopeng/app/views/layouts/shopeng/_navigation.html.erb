<div class="container">
	<p id="notice"><%= notice %></p>

  <div class="row">
	<div class="col-md-4">
		<div class="well">

			<p>
			  <strong>Title:</strong>
			  <%= @item.title %>
			</p>

			<p>
			  <strong>Text:</strong>
			  <%= @item.text %>
			</p>

			<p>
			  <strong>Price:</strong>
			  <%= @item.price %>
			</p>
		
			<p>
			  <strong>Thumb:</strong><br />
			  <%= image_tag @item.image_url(:thumb).to_s %>
			</p>
		
		 
			<%= link_to 'Back', items_path, :class => 'btn btn-primary' %>
		</div>
	</div>
  </div>
</div>
